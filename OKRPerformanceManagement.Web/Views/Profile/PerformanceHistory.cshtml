@model IEnumerable<OKRPerformanceManagement.Models.PerformanceReview>
@{
    ViewData["Title"] = "Performance History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Performance History</h1>
                <div>
                    @await Html.PartialAsync("_RoleBasedBackButton")
                    <a href="@Url.Action("ViewProfile")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Performance Reviews</h6>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Created Date</th>
                                        <th>Overall Rating</th>
                                        <th>Manager</th>
                                        <th>Assessment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in Model)
                                    {
                                        <tr>
                                            <td>@review.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (review.OverallRating.HasValue)
                                                {
                                                    <span class="badge bg-@(review.OverallRating >= 4 ? "success" : review.OverallRating >= 3 ? "warning" : "danger")">
                                                        @review.OverallRating/5
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Not Rated</span>
                                                }
                                            </td>
                                            <td>@(review.Manager != null ? $"{review.Manager.FirstName} {review.Manager.LastName}" : "N/A")</td>
                                            <td>@(string.IsNullOrEmpty(review.FinalAssessment) ? (string.IsNullOrEmpty(review.ManagerAssessment) ? (string.IsNullOrEmpty(review.EmployeeSelfAssessment) ? "No comments" : review.EmployeeSelfAssessment) : review.ManagerAssessment) : review.FinalAssessment)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-chart-line fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-500">No Performance Reviews Found</h5>
                            <p class="text-gray-400">You don't have any performance reviews yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
