@model OKRPerformanceManagement.Web.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Settings</h1>
                <div>
                    <a href="@Url.Action("ViewProfile")" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-info me-2">
                        <i class="fas fa-tachometer-alt"></i> Back to Admin Dashboard
                    </a>
                    <a href="@Url.Action("Notifications")" class="btn btn-outline-primary">
                        <i class="fas fa-bell"></i> Notifications
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">General Settings</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Settings" method="post">
                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="NotificationsEnabled" class="form-check-input" />
                                <label asp-for="NotificationsEnabled" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Theme" class="form-label"></label>
                            <select asp-for="Theme" class="form-select" id="themeSelect">
                                <option value="Light">Light</option>
                                <option value="Dark">Dark</option>
                                <option value="Auto">Auto</option>
                            </select>
                            <small class="form-text text-muted">Theme changes are applied immediately</small>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Language" class="form-label"></label>
                            <select asp-for="Language" class="form-select">
                                <option value="English">English</option>
                                <option value="Spanish">Spanish</option>
                                <option value="French">French</option>
                                <option value="German">German</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TimeZone" class="form-label"></label>
                            <select asp-for="TimeZone" class="form-select">
                                <option value="UTC">UTC</option>
                                <option value="EST">Eastern Time</option>
                                <option value="PST">Pacific Time</option>
                                <option value="CST">Central Time</option>
                                <option value="MST">Mountain Time</option>
                            </select>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast Notification Container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
    <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-success text-white">
            <i class="fas fa-check-circle me-2"></i>
            <strong class="me-auto">Success</strong>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="toastMessage">
            <!-- Message will be inserted here -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Show success toast notification if there's a success message
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                var successMessage = '@Html.Raw(TempData["SuccessMessage"])';
                showSuccessToast(successMessage);
                </text>
            }
        });

        function showSuccessToast(message) {
            $('#toastMessage').text(message);
            var toastElement = document.getElementById('successToast');
            var toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 4000 // Show for 4 seconds
            });
            toast.show();
        }
    </script>
}
