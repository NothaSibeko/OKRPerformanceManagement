@model OKRPerformanceManagement.Web.ViewModels.ViewProfileViewModel
@{
    ViewData["Title"] = "View Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">My Profile</h1>
                <div>
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-info me-2">
                        <i class="fas fa-tachometer-alt"></i> Back to Admin Dashboard
                    </a>
                    <a href="@Url.Action("EditProfile")" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Picture</h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-8x text-primary"></i>
                    </div>
                    <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted mb-0">@Model.Role</p>
                    <span class="badge badge-success mt-2">@(Model.IsActive ? "Active" : "Inactive")</span>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Profile Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">First Name</label>
                                <p class="form-control-plaintext">@Model.FirstName</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Last Name</label>
                                <p class="form-control-plaintext">@Model.LastName</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Position</label>
                                <p class="form-control-plaintext">@Model.Position</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Role</label>
                                <p class="form-control-plaintext">@Model.Role</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Manager</label>
                                <p class="form-control-plaintext">@Model.ManagerName</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Member Since</label>
                                <p class="form-control-plaintext">@Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Status</label>
                                <p class="form-control-plaintext">
                                    <span class="badge badge-@(Model.IsActive ? "success" : "danger")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
