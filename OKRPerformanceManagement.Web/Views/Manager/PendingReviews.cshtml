@{
    ViewData["Title"] = "Pending Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Pending Reviews</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    @{
        var currentManager = ViewBag.Manager as OKRPerformanceManagement.Models.Employee;
        var pendingReviews = ViewBag.PendingReviews as List<OKRPerformanceManagement.Models.PerformanceReview>;
    }

    @if (pendingReviews != null && pendingReviews.Any())
    {
        <div class="row">
            @foreach (var review in pendingReviews)
            {
                var isMyOKR = currentManager != null && review.EmployeeId == currentManager.Id;
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">
                                @if (isMyOKR)
                                {
                                    <i class="fas fa-user me-2"></i><text>My OKR</text>
                                }
                                else
                                {
                                    <text>@review.Employee.FirstName @review.Employee.LastName</text>
                                }
                            </h6>
                            <span class="badge bg-warning text-white">@review.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    @if (!isMyOKR)
                                    {
                                        <p><strong>Position:</strong> @review.Employee.Position</p>
                                        <p><strong>Role:</strong> @review.Employee.Role</p>
                                    }
                                    <p><strong>Review Period:</strong> @review.ReviewPeriodStart.ToString("MMM dd, yyyy") - @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")</p>
                                    @if (isMyOKR && review.Manager != null)
                                    {
                                        <p><strong>Manager:</strong> @review.Manager.FirstName @review.Manager.LastName</p>
                                    }
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Created:</strong> @review.CreatedDate.ToString("MMM dd, yyyy")</p>
                                    @if (review.SubmittedDate.HasValue)
                                    {
                                        <p><strong>Submitted:</strong> @review.SubmittedDate.Value.ToString("MMM dd, yyyy")</p>
                                    }
                                    <p><strong>Objectives:</strong> @review.Objectives.Count</p>
                                    <p><strong>Key Results:</strong> @((review.Objectives as ICollection<OKRPerformanceManagement.Models.Objective>).Sum(o => o.KeyResults.Count))</p>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(review.EmployeeSelfAssessment))
                            {
                                <div class="mt-3">
                                    <h6 class="font-weight-bold">Employee Self Assessment:</h6>
                                    <p class="text-muted">@(review.EmployeeSelfAssessment.Length > 200 ? review.EmployeeSelfAssessment.Substring(0, 200) + "..." : review.EmployeeSelfAssessment)</p>
                                </div>
                            }

                            <div class="mt-3">
                                <a href="@Url.Action("ReviewDetails", "Manager", new { id = review.Id })" class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                @if (isMyOKR)
                                {
                                    <a href="@Url.Action("EditOKR", "Employee", new { id = review.Id })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit My OKR
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("ManagerReview", "Manager", new { id = review.Id })" class="btn btn-success btn-sm">
                                        <i class="fas fa-edit"></i> Add Manager Review
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-clipboard-check fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-600">No Pending Reviews</h5>
                        <p class="text-muted">There are currently no reviews pending your attention.</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
