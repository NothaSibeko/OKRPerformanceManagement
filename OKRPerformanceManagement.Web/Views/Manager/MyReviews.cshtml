@{
    ViewData["Title"] = "My Reviews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">My Reviews</h1>
                <div>
                    <a href="@Url.Action("PendingReviews")" class="btn btn-warning me-2">
                        <i class="fas fa-clock"></i> Pending Reviews
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.AllReviews != null && ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.AllReviews).Any())
    {
        <div class="row">
            @foreach (var review in ViewBag.AllReviews)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">
                                @review.Employee.FirstName @review.Employee.LastName
                            </h6>
                            <span class="badge 
                                @(review.Status == "Draft" ? "bg-secondary" : 
                                  review.Status == "Employee_Review" ? "bg-info" : 
                                  review.Status == "Manager_Review" ? "bg-warning" : 
                                  review.Status == "Discussion" ? "bg-primary" : 
                                  review.Status == "Completed" ? "bg-success" : 
                                  review.Status == "Signed" ? "bg-success" : "bg-secondary")">
                                @review.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Position:</strong> @review.Employee.Position</p>
                                    <p><strong>Role:</strong> @review.Employee.Role</p>
                                    <p><strong>Review Period:</strong> @review.ReviewPeriodStart.ToString("MMM dd, yyyy") - @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Created:</strong> @review.CreatedDate.ToString("MMM dd, yyyy")</p>
                                    <p><strong>Objectives:</strong> @review.Objectives.Count</p>
                                    <p><strong>Key Results:</strong> @((review.Objectives as ICollection<OKRPerformanceManagement.Models.Objective>).Sum(o => o.KeyResults.Count))</p>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(review.EmployeeSelfAssessment))
                            {
                                <div class="mt-3">
                                    <h6 class="font-weight-bold">Employee Self Assessment:</h6>
                                    <p class="text-muted">@(review.EmployeeSelfAssessment.Length > 200 ? review.EmployeeSelfAssessment.Substring(0, 200) + "..." : review.EmployeeSelfAssessment)</p>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(review.ManagerAssessment))
                            {
                                <div class="mt-3">
                                    <h6 class="font-weight-bold">Manager Assessment:</h6>
                                    <p class="text-muted">@(review.ManagerAssessment.Length > 200 ? review.ManagerAssessment.Substring(0, 200) + "..." : review.ManagerAssessment)</p>
                                </div>
                            }

                            <div class="mt-3">
                                <a href="@Url.Action("ReviewDetails", new { id = review.Id })" class="btn btn-primary btn-sm me-2">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                                
                                @if (review.Status == "Manager_Review")
                                {
                                    <a href="@Url.Action("ManagerReview", new { id = review.Id })" class="btn btn-success btn-sm">
                                        <i class="fas fa-edit"></i> Add Manager Review
                                    </a>
                                }
                                else if (review.Status == "Discussion")
                                {
                                    <a href="@Url.Action("ManagerReview", new { id = review.Id })" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Continue Review
                                    </a>
                                }
                                else if (review.Status == "Completed" || review.Status == "Signed")
                                {
                                    <a href="@Url.Action("DownloadPDF", new { id = review.Id })" class="btn btn-success btn-sm" title="Download PDF">
                                        <i class="fas fa-download"></i> PDF
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-600">No Reviews Found</h5>
                        <p class="text-muted">You haven't created or been assigned any performance reviews yet.</p>
                        <a href="@Url.Action("Index")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
