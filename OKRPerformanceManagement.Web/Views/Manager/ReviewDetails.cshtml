@model OKRPerformanceManagement.Models.PerformanceReview
@{
    ViewData["Title"] = "Review Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Performance Review Details</h1>
                <div>
                    <a href="@Url.Action("PendingReviews")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Pending Reviews
                    </a>
                    <a href="@Url.Action("Index")" class="btn btn-info">
                        <i class="fas fa-home"></i> Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Information -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Employee Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="avatar-lg bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mb-3">
                                @Model.Employee.FirstName.Substring(0, 1)@Model.Employee.LastName.Substring(0, 1)
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h4>@Model.Employee.FirstName @Model.Employee.LastName</h4>
                            <p class="text-muted mb-1">@Model.Employee.Position</p>
                            <p class="text-muted mb-1">@Model.Employee.Role</p>
                            <p class="text-muted mb-1">@Model.Employee.Email</p>
                            <p class="text-muted">Review Period: @Model.ReviewPeriodStart.ToString("MMM dd, yyyy") - @Model.ReviewPeriodEnd.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Self Assessment -->
    @if (!string.IsNullOrEmpty(Model.EmployeeSelfAssessment))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Employee Self Assessment</h6>
                    </div>
                    <div class="card-body">
                        <p>@Model.EmployeeSelfAssessment</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Objectives and Key Results -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Objectives and Key Results</h6>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_OKRComprehensiveTable", Model)
                </div>
            </div>
        </div>
    </div>

    <!-- Manager Actions -->
    @if (Model.Status == "Manager_Review")
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Manager Actions</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <a href="@Url.Action("ManagerReview", new { id = Model.Id })" class="btn btn-primary btn-lg w-100">
                                    <i class="fas fa-edit"></i> Add Manager Review
                                </a>
                                <p class="text-muted mt-2">Click here to provide your assessment, ratings, and comments for this performance review.</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <a href="@Url.Action("ScheduleDiscussion", new { id = Model.Id })" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-calendar-alt"></i> Schedule Discussion
                                </a>
                                <p class="text-muted mt-2">Schedule a discussion session with the employee to review their performance.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.Status == "Discussion")
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-warning">Review Status: Discussion</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.ScheduledDiscussionDate.HasValue)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-calendar-check me-2"></i>
                                <strong>Discussion Scheduled:</strong> 
                                @Model.ScheduledDiscussionDate.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This review has been scheduled for discussion with the employee. 
                                You can continue to edit the review or finalize it after the discussion.
                            </div>
                        }
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <a href="@Url.Action("ManagerReview", new { id = Model.Id })" class="btn btn-warning w-100">
                                    <i class="fas fa-edit"></i> Continue Review
                                </a>
                            </div>
                            @if (!Model.ScheduledDiscussionDate.HasValue)
                            {
                                <div class="col-md-4 mb-2">
                                    <a href="@Url.Action("ScheduleDiscussion", new { id = Model.Id })" class="btn btn-info w-100">
                                        <i class="fas fa-calendar-alt"></i> Schedule Discussion
                                    </a>
                                </div>
                            }
                            <div class="col-md-4 mb-2">
                                <form method="post" action="@Url.Action("ManagerReview")" style="display: inline;">
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <input type="hidden" name="action" value="finalize" />
                                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to finalize this review?')">
                                        <i class="fas fa-check"></i> Finalize Review
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.Status == "Completed")
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-success">Review Status: Completed</h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle me-2"></i>
                            This review has been completed and finalized.
                        </div>
                        <p class="text-muted">
                            <strong>Finalized Date:</strong> @(Model.FinalizedDate?.ToString("MMM dd, yyyy") ?? "Not set")
                        </p>
                        <div class="mt-3">
                            <a href="@Url.Action("DownloadPDF", new { id = Model.Id })" class="btn btn-success">
                                <i class="fas fa-download"></i> Download PDF
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .avatar-lg {
        width: 80px;
        height: 80px;
        font-size: 24px;
    }
</style>
