@{
    ViewData["Title"] = "Create New Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Create New Review</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Select Employee for Review</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.IsSpecificEmployee == true)
                    {
                        <!-- Show form for specific employee -->
                        @if (ViewBag.Employee != null && ViewBag.OKRTemplate != null)
                        {
                            var employee = ViewBag.Employee as OKRPerformanceManagement.Models.Employee;
                            var template = ViewBag.OKRTemplate as OKRPerformanceManagement.Models.OKRTemplate;
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <h5>Employee Information</h5>
                                    <div class="card border-left-primary">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                    @employee.FirstName.Substring(0, 1)@employee.LastName.Substring(0, 1)
                                                </div>
                                                <div>
                                                    <div class="font-weight-bold">@employee.FirstName @employee.LastName</div>
                                                    <div class="text-muted">@employee.Position</div>
                                                    <span class="badge badge-info">@employee.Role</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h5>OKR Template</h5>
                                    <div class="card border-left-success">
                                        <div class="card-body">
                                            <h6 class="font-weight-bold">@template.Name</h6>
                                            <p class="text-muted">@template.Description</p>
                                            <small class="text-info">@template.Objectives.Count objectives</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <form method="post" action="@Url.Action("CreateReview")">
                                    <input type="hidden" name="employeeId" value="@employee.Id" />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="reviewPeriodStart">Review Period Start</label>
                                                <input type="date" class="form-control" name="reviewPeriodStart" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="reviewPeriodEnd">Review Period End</label>
                                                <input type="date" class="form-control" name="reviewPeriodEnd" value="@DateTime.Now.AddMonths(3).ToString("yyyy-MM-dd")" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-plus"></i> Create OKR Review
                                        </button>
                                        <a href="@Url.Action("CreateReview")" class="btn btn-secondary">
                                            <i class="fas fa-arrow-left"></i> Back to Employee List
                                        </a>
                                    </div>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <!-- Show list of available team members -->
                        @if (ViewBag.TeamMembers != null && ((List<OKRPerformanceManagement.Models.Employee>)ViewBag.TeamMembers).Any())
                        {
                            <div class="row">
                                @foreach (var member in (List<OKRPerformanceManagement.Models.Employee>)ViewBag.TeamMembers)
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="card border-left-primary shadow h-100">
                                            <div class="card-body">
                                                <div class="row no-gutters align-items-center">
                                                    <div class="col mr-2">
                                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                            @member.Position
                                                        </div>
                                                        <div class="h6 mb-0 font-weight-bold text-gray-800">
                                                            @member.FirstName @member.LastName
                                                        </div>
                                                        <div class="text-muted small">@member.Email</div>
                                                        <div class="mt-2">
                                                            <span class="badge badge-info">@member.Role</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-auto">
                                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center">
                                                            @member.FirstName.Substring(0, 1)@member.LastName.Substring(0, 1)
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="mt-3">
                                                    <a href="@Url.Action("CreateReview", new { employeeId = member.Id })" class="btn btn-primary btn-sm btn-block">
                                                        <i class="fas fa-plus"></i> Create Review
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-users fa-3x text-gray-300 mb-3"></i>
                                <h5 class="text-gray-600">No Available Team Members</h5>
                                <p class="text-muted">All your team members already have active reviews or no team members are available.</p>
                                <a href="@Url.Action("Index")" class="btn btn-primary">
                                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-sm {
        width: 40px;
        height: 40px;
        font-size: 14px;
    }
    
    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }
</style>
