@model OKRPerformanceManagement.Models.PerformanceReview

@{
    ViewData["Title"] = "Edit OKR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">Edit OKR</h1>
                <div>
                    <a href="@Url.Action("MyActiveReviews")" class="btn btn-outline-primary me-2">
                        <i class="fas fa-list"></i> My Active Reviews
                    </a>
                    <a href="@Url.Action("ReviewDetails", new { id = Model?.Id })" class="btn btn-secondary me-2">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a href="@Url.Action("MyOKRs")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to My OKRs
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null)
    {
        <!-- OKR Header Information -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">OKR Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>OKR Review #@Model.Id</h5>
                                <p class="text-muted">Performance Review for @(Model.Employee?.FirstName ?? "Unknown") @(Model.Employee?.LastName ?? "Employee")</p>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Status:</strong>
                                        @switch (Model.Status)
                                        {
                                            case "Draft":
                                                <span class="badge badge-secondary">Draft</span>
                                                break;
                                            case "Employee_Review":
                                                <span class="badge badge-warning">Employee Review</span>
                                                break;
                                            default:
                                                <span class="badge badge-secondary">@(Model.Status ?? "Unknown")</span>
                                                break;
                                        }
                                    </div>
                                    <div class="col-6">
                                        <strong>Period:</strong>
                                        <span>@(Model.ReviewPeriodStart.ToString("MMM dd") ?? "N/A") - @(Model.ReviewPeriodEnd.ToString("MMM dd, yyyy") ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Edit Form -->
        <form asp-action="EditOKR" method="post">
            <input type="hidden" asp-for="Id" />
            
            <!-- Objectives and Key Results -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Objectives and Key Results</h6>
                        </div>
                        <div class="card-body">
                            @{
                                ViewBag.IsEmployeeEdit = true;
                            }
                            @await Html.PartialAsync("_OKRComprehensiveTableEditable", Model)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Self Assessment Section -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Employee Self Assessment</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="EmployeeSelfAssessment">Self Assessment</label>
                                <textarea asp-for="EmployeeSelfAssessment" class="form-control" rows="5" placeholder="Provide your self-assessment of your performance during this period..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row">
                <div class="col-12">
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <button type="submit" name="action" value="save" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                    <button type="submit" name="action" value="submit" class="btn btn-success">
                                        <i class="fas fa-paper-plane"></i> Submit for Review
                                    </button>
                                </div>
                                <div>
                                    <a href="@Url.Action("MyActiveReviews")" class="btn btn-secondary">
                                        <i class="fas fa-times"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-exclamation-triangle fa-3x text-warning mb-3"></i>
                        <h5 class="text-gray-600">OKR Not Found</h5>
                        <p class="text-muted">The requested OKR could not be found or loaded.</p>
                        <a href="@Url.Action("MyOKRs")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Back to My OKRs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update calculations when rating changes
            $(document).on('change', '.employee-rating, .manager-rating', function() {
                var rating = parseInt($(this).val()) || 0;
                var weight = parseFloat($(this).data('weight')) || 0;
                var krId = $(this).data('kr-id');
                var isEmployee = $(this).hasClass('employee-rating');
                
                if (rating > 0) {
                    var percentValue = (rating / 5.0) * 100;
                    var calc = (percentValue / 100.0) * weight;
                    
                    if (isEmployee) {
                        $('.employee-percent[data-kr-id="' + krId + '"]').html(percentValue.toFixed(2) + '%');
                        $('.employee-calc[data-kr-id="' + krId + '"]').html(calc.toFixed(2) + '%');
                    } else {
                        $('.manager-percent[data-kr-id="' + krId + '"]').html(percentValue.toFixed(2) + '%');
                        $('.manager-calc[data-kr-id="' + krId + '"]').html(calc.toFixed(2) + '%');
                    }
                } else {
                    if (isEmployee) {
                        $('.employee-percent[data-kr-id="' + krId + '"]').html('<span class="text-muted">-</span>');
                        $('.employee-calc[data-kr-id="' + krId + '"]').html('<span class="text-muted">-</span>');
                    } else {
                        $('.manager-percent[data-kr-id="' + krId + '"]').html('<span class="text-muted">-</span>');
                        $('.manager-calc[data-kr-id="' + krId + '"]').html('<span class="text-muted">-</span>');
                    }
                }
            });

            // Form submission validation
            $('form').on('submit', function(e) {
                var action = $('button[type="submit"]:focus').val();
                if (action === 'submit') {
                    if (!confirm('Are you sure you want to submit this OKR for review? You will not be able to edit it after submission.')) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
}
