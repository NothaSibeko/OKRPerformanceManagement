@{
    ViewData["Title"] = "Employee Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">My Dashboard</h1>
                <div>
                    <a href="@Url.Action("MyOKRs")" class="btn btn-info">
                        <i class="fas fa-clipboard-list"></i> My OKRs
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Welcome Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-left-primary shadow">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Welcome back, @ViewBag.Employee.FirstName!
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @ViewBag.Employee.Position - @ViewBag.Employee.Role
                            </div>
                            <div class="text-muted small">
                                Line of Business: @ViewBag.Employee.LineOfBusiness | Financial Year: @ViewBag.Employee.FinancialYear
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                My OKRs
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MyOKRs.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                In Progress
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.InProgressOKRs.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Pending Review
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingReviewOKRs.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-eye fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Completed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CompletedOKRs.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Current OKR -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Current OKR (Q@((DateTime.Now.Month - 1) / 3 + 1) @DateTime.Now.Year)</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.CurrentOKR != null)
                    {
                        <div class="row">
                            <div class="col-md-8">
                                <h5>OKR Review #@ViewBag.CurrentOKR.Id</h5>
                                <p class="text-muted">Performance Review for @ViewBag.CurrentOKR.Employee.FirstName @ViewBag.CurrentOKR.Employee.LastName</p>
                                
                                <div class="progress mb-3">
                                    <div class="progress-bar" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                        65% Complete
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <small class="text-muted">Status: </small>
                                        <span class="badge badge-warning">In Progress</span>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted">Due Date: </small>
                                        <span>March 31, 2025</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 text-right">
                                <a href="@Url.Action("EditOKR", new { id = ViewBag.CurrentOKR.Id })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit OKR
                                </a>
                                <a href="@Url.Action("ViewOKR", new { id = ViewBag.CurrentOKR.Id })" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-600">No OKR Assigned Yet</h5>
                            <p class="text-muted">Your manager will assign an OKR for you to work on. Please wait for your OKR to be created.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent OKRs -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent OKRs</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="recentOKRsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>OKR Name</th>
                                    <th>Period</th>
                                    <th>Status</th>
                                    <th>Progress</th>
                                    <th>Manager Rating</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var okr in ViewBag.MyOKRs)
                                {
                                    <tr>
                                        <td>@(okr?.OKRTemplate?.Name ?? $"OKR Review #{okr?.Id}")</td>
                                        <td>@(okr?.ReviewPeriodStart.ToString("MMM yyyy") ?? "N/A") - @(okr?.ReviewPeriodEnd.ToString("MMM yyyy") ?? "N/A")</td>
                                        <td>
                                            @switch (okr?.Status)
                                            {
                                                case "Draft":
                                                    <span class="badge badge-secondary">Draft</span>
                                                    break;
                                                case "Employee_Review":
                                                    <span class="badge badge-warning">Employee Review</span>
                                                    break;
                                                case "Manager_Review":
                                                    <span class="badge badge-info">Manager Review</span>
                                                    break;
                                                case "Discussion":
                                                    <span class="badge badge-warning">Discussion</span>
                                                    break;
                                                case "Signed":
                                                    <span class="badge badge-success">Signed</span>
                                                    break;
                                                case "Completed":
                                                    <span class="badge badge-success">Completed</span>
                                                    break;
                                                default:
                                                    <span class="badge badge-secondary">@(okr?.Status ?? "Unknown")</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100">
                                                    65%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var hasRating = okr?.OverallRating?.HasValue == true;
                                            }
                                            @if (hasRating)
                                            {
                                                <span class="badge badge-success">@okr.OverallRating.Value.ToString("F1")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not Rated</span>
                                            }
                                        </td>
                                        <td>
                                            @if (okr != null)
                                            {
                                                <a href="@Url.Action("ViewOKR", new { id = okr.Id })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                                @if (okr.Status == "Draft" || okr.Status == "Employee_Review")
                                                {
                                                    <a href="@Url.Action("EditOKR", new { id = okr.Id })" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-edit"></i> Edit
                                                    </a>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("MyOKRs")" class="btn btn-info btn-block">
                                <i class="fas fa-clipboard-list fa-2x mb-2"></i><br>
                                View All OKRs
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("SelfAssessment")" class="btn btn-warning btn-block">
                                <i class="fas fa-user-edit fa-2x mb-2"></i><br>
                                Self Assessment
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="@Url.Action("Profile")" class="btn btn-secondary btn-block">
                                <i class="fas fa-user-cog fa-2x mb-2"></i><br>
                                My Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check if DataTable is available before initializing
            if ($.fn.DataTable) {
                $('#recentOKRsTable').DataTable({
                    "pageLength": 10,
                    "order": [[ 1, "desc" ]]
                });
            }
        });
    </script>
}
