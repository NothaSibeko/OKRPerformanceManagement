@{
    ViewData["Title"] = "My OKRs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">My OKRs</h1>
                <div>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">All My OKRs</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.MyOKRs != null && ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.MyOKRs).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="myOKRsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>OKR Name</th>
                                        <th>Period</th>
                                        <th>Status</th>
                                        <th>Progress</th>
                                        <th>Manager Rating</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var okr in ViewBag.MyOKRs)
                                    {
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong>OKR Review #@(okr?.Id ?? 0)</strong>
                                                    <br>
                                                    <small class="text-muted">Performance Review</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span>@(okr?.ReviewPeriodStart.ToString("MMM dd") ?? "N/A") - @(okr?.ReviewPeriodEnd.ToString("MMM dd, yyyy") ?? "N/A")</span>
                                            </td>
                                            <td>
                                                @switch (okr?.Status)
                                                {
                                                    case "Draft":
                                                        <span class="badge badge-secondary">Draft</span>
                                                        break;
                                                    case "Employee_Review":
                                                        <span class="badge badge-warning">Employee Review</span>
                                                        break;
                                                    case "Manager_Review":
                                                        <span class="badge badge-info">Manager Review</span>
                                                        break;
                                                    case "Discussion":
                                                        <span class="badge badge-primary">Discussion</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge badge-success">Completed</span>
                                                        break;
                                                    case "Signed":
                                                        <span class="badge badge-success">Signed</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@(okr?.Status ?? "Unknown")</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var progress = 0;
                                                    var status = okr?.Status ?? "";
                                                    if (status == "Draft") progress = 10;
                                                    else if (status == "Employee_Review") progress = 30;
                                                    else if (status == "Manager_Review") progress = 60;
                                                    else if (status == "Discussion") progress = 80;
                                                    else if (status == "Completed" || status == "Signed") progress = 100;
                                                }
                                                <div class="progress" style="height: 20px;">
                                                    <div class="progress-bar" role="progressbar" style="width: @progress%" aria-valuenow="@progress" aria-valuemin="0" aria-valuemax="100">
                                                        @progress%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @{
                                                    var hasRating = okr?.OverallRating?.HasValue == true;
                                                }
                                                @if (hasRating)
                                                {
                                                    <span class="badge badge-success">@(okr?.OverallRating?.Value.ToString("F1") ?? "0.0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not Rated</span>
                                                }
                                            </td>
                                            <td>
                                                @if (okr?.CreatedDate != null)
                                                {
                                                    <span>@okr.CreatedDate.ToString("MMM dd, yyyy")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not set</span>
                                                }
                                            </td>
                                            <td>
                                                @if (okr != null)
                                                {
                                                    <div class="btn-group" role="group">
                                                        <a href="@Url.Action("ViewOKR", new { id = okr.Id })" class="btn btn-sm btn-info" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        @if (status == "Draft" || status == "Employee_Review")
                                                        {
                                                            <a href="@Url.Action("EditOKR", new { id = okr.Id })" class="btn btn-sm btn-primary" title="Edit">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                        }
                                                        @if (status == "Manager_Review" || status == "Discussion")
                                                        {
                                                            <a href="@Url.Action("SelfAssessment", new { id = okr.Id })" class="btn btn-sm btn-warning" title="Self Assessment">
                                                                <i class="fas fa-user-edit"></i>
                                                            </a>
                                                        }
                                                        @if (status == "Completed" || status == "Signed")
                                                        {
                                                            <a href="@Url.Action("DownloadPDF", new { id = okr.Id })" class="btn btn-sm btn-success" title="Download PDF">
                                                                <i class="fas fa-download"></i>
                                                            </a>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No actions available</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-600">No OKRs Assigned</h5>
                            <p class="text-muted">Your manager will assign OKRs for you to work on. Please wait for your OKRs to be created.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check if DataTable is available before initializing
            if ($.fn.DataTable) {
                $('#myOKRsTable').DataTable({
                    "pageLength": 25,
                    "order": [[ 5, "desc" ]], // Sort by Created Date descending
                    "responsive": true,
                    "columnDefs": [
                        { "orderable": false, "targets": 6 } // Disable sorting on Actions column
                    ]
                });
            }
        });
    </script>
}
