@{
    ViewData["Title"] = "HR Performance History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-user-shield me-2 text-primary"></i>HR Performance History
                </h1>
                <a href="@Url.Action("Index")" class="btn btn-primary">
                    <i class="fas fa-tachometer-alt"></i> HR Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (ViewBag.AllCompletedReviews != null)
    {
        var allCompletedReviews = ViewBag.AllCompletedReviews as List<OKRPerformanceManagement.Models.PerformanceReview>;
        var performanceStats = ViewBag.PerformanceStats as Dictionary<string, object>;

        <div class="row">
            <div class="col-lg-3">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Organization Overview</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <div class="mb-3">
                                <i class="fas fa-building fa-3x text-gray-300"></i>
                            </div>
                            <h4 class="font-weight-bold">@(performanceStats?["TotalEmployees"] ?? 0)</h4>
                            <p class="text-muted">Total Employees</p>
                        </div>
                    </div>
                </div>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Performance Reviews</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-12 mb-3">
                                <div class="h4 font-weight-bold text-success">@(allCompletedReviews?.Count ?? 0)</div>
                                <div class="text-muted">Completed Reviews</div>
                            </div>
                            <div class="col-12">
                                <div class="h4 font-weight-bold text-primary">@(performanceStats?["AverageRating"] != null ? ((decimal)performanceStats["AverageRating"]).ToString("F1") : "0.0")</div>
                                <div class="text-muted">Average Rating</div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (performanceStats?["TopPerformers"] != null)
                {
                    var topPerformers = performanceStats["TopPerformers"] as List<OKRPerformanceManagement.Models.PerformanceReview>;
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Top Performers</h6>
                        </div>
                        <div class="card-body">
                            @if (topPerformers != null && topPerformers.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var review in topPerformers)
                                    {
                                        <li class="mb-2">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="font-weight-bold">@review.Employee.FirstName @review.Employee.LastName</span>
                                                <span class="badge bg-success">@(review.OverallRating?.ToString("F1") ?? "N/A")</span>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted text-center">No top performers yet</p>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-9">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">All Completed Performance Reviews</h6>
                    </div>
                    <div class="card-body">
                        @if (allCompletedReviews != null && allCompletedReviews.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="reviewsTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Employee</th>
                                            <th>Manager</th>
                                            <th>Review Period</th>
                                            <th>Finalized Date</th>
                                            <th>Overall Rating</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in allCompletedReviews)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@review.Employee.FirstName @review.Employee.LastName</strong><br>
                                                    <small class="text-muted">@review.Employee.Position</small>
                                                </td>
                                                <td>
                                                    @if (review.Manager != null)
                                                    {
                                                        <text>@review.Manager.FirstName @review.Manager.LastName</text>
                                                    }
                                                    else
                                                    {
                                                        <text>N/A</text>
                                                    }
                                                </td>
                                                <td>
                                                    @review.ReviewPeriodStart.ToString("MMM dd, yyyy")<br>
                                                    <small class="text-muted">to</small><br>
                                                    @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")
                                                </td>
                                                <td>@(review.FinalizedDate?.ToString("MMM dd, yyyy") ?? review.CreatedDate.ToString("MMM dd, yyyy"))</td>
                                                <td>
                                                    @if (review.OverallRating.HasValue)
                                                    {
                                                        <span class="badge bg-success">@review.OverallRating.Value.ToString("F1")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not rated</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("ReviewDetails", "HR", new { id = review.Id })" class="btn btn-sm btn-info">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                                <h5 class="text-gray-600">No Completed Reviews</h5>
                                <p class="text-muted">No performance reviews have been completed yet.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-600">No Data Available</h5>
                        <p class="text-muted">Performance history data is not available.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable && $('#reviewsTable').length) {
                $('#reviewsTable').DataTable({
                    "pageLength": 25,
                    "order": [[ 3, "desc" ]],
                    "responsive": true
                });
            }
        });
    </script>
}

