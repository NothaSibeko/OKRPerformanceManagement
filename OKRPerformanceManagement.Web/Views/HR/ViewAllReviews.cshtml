@{
    ViewData["Title"] = "All Reviews - HR";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">All Performance Reviews</h1>
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to HR Dashboard
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.AllReviews != null && ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.AllReviews).Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">All Performance Reviews in System</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="reviewsTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th>Manager</th>
                                        <th>Status</th>
                                        <th>Review Period</th>
                                        <th>Created Date</th>
                                        <th>Overall Rating</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.AllReviews))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@review.Employee.FirstName @review.Employee.LastName</strong><br>
                                                <small class="text-muted">@review.Employee.Position</small>
                                            </td>
                                            <td>
                                                @if (review.Manager != null)
                                                {
                                                    <text>@review.Manager.FirstName @review.Manager.LastName</text>
                                                }
                                                else
                                                {
                                                    <text>N/A</text>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge 
                                                    @(review.Status == "Draft" ? "bg-secondary" : 
                                                      review.Status == "Employee_Review" ? "bg-info" : 
                                                      review.Status == "Manager_Review" ? "bg-warning" : 
                                                      review.Status == "Discussion" ? "bg-primary" : 
                                                      review.Status == "Completed" ? "bg-success" : 
                                                      review.Status == "Signed" ? "bg-success" : "bg-secondary")">
                                                    @review.Status
                                                </span>
                                            </td>
                                            <td>
                                                @review.ReviewPeriodStart.ToString("MMM dd, yyyy")<br>
                                                <small class="text-muted">to</small><br>
                                                @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")
                                            </td>
                                            <td>@review.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (review.OverallRating.HasValue)
                                                {
                                                    <span class="badge bg-success">@review.OverallRating.Value.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not rated</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("ReviewDetails", new { id = review.Id })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-clipboard-list fa-3x text-gray-300 mb-3"></i>
                        <h5 class="text-gray-600">No Reviews Found</h5>
                        <p class="text-muted">No performance reviews have been created yet.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable && $('#reviewsTable').length) {
                $('#reviewsTable').DataTable({
                    "pageLength": 25,
                    "order": [[ 4, "desc" ]],
                    "responsive": true
                });
            }
        });
    </script>
}

