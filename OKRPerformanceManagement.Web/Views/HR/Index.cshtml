@{
    ViewData["Title"] = "HR Dashboard - Super User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">
                    <i class="fas fa-user-shield me-2 text-primary"></i>HR Dashboard
                </h1>
                <div>
                    <a href="@Url.Action("AssignOKR")" class="btn btn-success">
                        <i class="fas fa-plus-circle"></i> Assign OKR to Anyone
                    </a>
                    <a href="@Url.Action("CreateEmployee")" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i> Add User
                    </a>
                    <a href="@Url.Action("ViewAllReviews")" class="btn btn-info">
                        <i class="fas fa-list"></i> View All Reviews
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-check-circle fa-2x me-3"></i>
                        <div class="flex-grow-1">
                            <h5 class="alert-heading mb-1"><i class="fas fa-check me-2"></i>Success!</h5>
                            <p class="mb-0">@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        var errorMessage = TempData["ErrorMessage"].ToString();
        var isActiveReviewError = errorMessage.Contains("already have active reviews");
        
        <div class="row">
            <div class="col-12">
                @if (isActiveReviewError)
                {
                    <div class="alert alert-warning border-0 shadow-lg fade show" role="alert" style="background: linear-gradient(135deg, #fff3cd 0%, #ffe69c 100%); border-left: 5px solid #ffc107 !important;">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="rounded-circle bg-warning bg-opacity-25 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="alert-heading mb-2 text-dark">
                                    <i class="fas fa-info-circle me-2 text-warning"></i>Active Reviews Detected
                                </h4>
                                <p class="mb-2 text-dark fw-semibold">@errorMessage</p>
                                <hr class="my-3" style="border-color: rgba(0,0,0,0.1);">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-lightbulb me-2 text-warning"></i>
                                    <p class="mb-0 text-dark small">
                                        <strong>What to do:</strong> Wait for the current reviews to be completed (Status: Draft, Employee Review, Manager Review, or Discussion) before assigning new OKRs.
                                    </p>
                                </div>
                                <div class="mt-3">
                                    <a href="@Url.Action("ViewAllReviews")" class="btn btn-sm btn-warning me-2">
                                        <i class="fas fa-list me-1"></i> View All Reviews
                                    </a>
                                    <a href="@Url.Action("AssignOKR")" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-redo me-1"></i> Try Again
                                    </a>
                                </div>
                            </div>
                            <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                            <div class="flex-grow-1">
                                <h5 class="alert-heading mb-1"><i class="fas fa-times-circle me-2"></i>Error</h5>
                                <p class="mb-0">@errorMessage</p>
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Upcoming Scheduled Discussions -->
    @if (ViewBag.UpcomingDiscussions != null && ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.UpcomingDiscussions).Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow border-left-warning">
                    <div class="card-header py-3 bg-warning text-white">
                        <h6 class="m-0 font-weight-bold">
                            <i class="fas fa-calendar-check me-2"></i>Upcoming Discussion Sessions (All Employees)
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var discussion in ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.UpcomingDiscussions).Take(6))
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-left-info h-100">
                                        <div class="card-body">
                                            <h6 class="font-weight-bold text-primary mb-2">
                                                <i class="fas fa-user me-2"></i>@discussion.Employee.FirstName @discussion.Employee.LastName
                                            </h6>
                                            <p class="mb-1 small">
                                                <i class="fas fa-user-tie me-2 text-muted"></i>Manager: @discussion.Manager?.FirstName @discussion.Manager?.LastName
                                            </p>
                                            <p class="mb-1">
                                                <i class="fas fa-calendar-alt me-2 text-info"></i>
                                                <strong>Date:</strong> @discussion.ScheduledDiscussionDate.Value.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="mb-1">
                                                <i class="fas fa-clock me-2 text-info"></i>
                                                <strong>Time:</strong> @discussion.ScheduledDiscussionDate.Value.ToString("hh:mm tt")
                                            </p>
                                            <a href="@Url.Action("ReviewDetails", "HR", new { id = discussion.Id })" class="btn btn-sm btn-info mt-2">
                                                <i class="fas fa-eye"></i> View Review
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalEmployees</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Active Reviews
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ActiveReviews</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed Reviews
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CompletedReviews</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Total Reviews
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalReviews</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Reviews -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pending Reviews (Requiring Action)</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.AllPendingReviews != null && ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.AllPendingReviews).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Employee</th>
                                        <th>Manager</th>
                                        <th>Status</th>
                                        <th>Review Period</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var review in ((List<OKRPerformanceManagement.Models.PerformanceReview>)ViewBag.AllPendingReviews).Take(10))
                                    {
                                        <tr>
                                            <td>@review.Employee.FirstName @review.Employee.LastName</td>
                                            <td>@(review.Manager != null ? $"{review.Manager.FirstName} {review.Manager.LastName}" : "N/A")</td>
                                            <td>
                                                <span class="badge bg-warning">@review.Status</span>
                                            </td>
                                            <td>@review.ReviewPeriodStart.ToString("MMM dd") - @review.ReviewPeriodEnd.ToString("MMM dd, yyyy")</td>
                                            <td>@review.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("ReviewDetails", "HR", new { id = review.Id })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No pending reviews at this time.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- All Employees -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">All Employees</h6>
                    <a href="@Url.Action("CreateEmployee")" class="btn btn-sm btn-primary">
                        <i class="fas fa-user-plus"></i> Add New Employee
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.AllEmployees != null && ((List<OKRPerformanceManagement.Models.Employee>)ViewBag.AllEmployees).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="employeesTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Position</th>
                                        <th>Role</th>
                                        <th>Manager</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in ((List<OKRPerformanceManagement.Models.Employee>)ViewBag.AllEmployees))
                                    {
                                        <tr>
                                            <td>@employee.FirstName @employee.LastName</td>
                                            <td>@employee.Email</td>
                                            <td>@employee.Position</td>
                                            <td>
                                                <span class="badge bg-info text-white">@employee.Role</span>
                                            </td>
                                            <td>@(employee.Manager != null ? $"{employee.Manager.FirstName} {employee.Manager.LastName}" : "N/A")</td>
                                            <td>
                                                <span class="badge @(employee.IsActive ? "bg-success" : "bg-secondary")">
                                                    @(employee.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("EditEmployee", new { id = employee.Id })" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a href="@Url.Action("AssignOKR")" class="btn btn-sm btn-success">
                                                    <i class="fas fa-plus"></i> Assign OKR
                                                </a>
                                                @if (employee.IsActive)
                                                {
                                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@employee.Id, '@employee.FirstName', '@employee.LastName')">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No employees found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title d-flex align-items-center" id="deleteModalLabel">
                    <i class="fas fa-user-slash me-2"></i> Confirm Employee Deactivation
                </h5>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-times fa-2x text-danger"></i>
                    </div>
                </div>
                <h6 class="mb-3 text-dark">
                    Are you sure you want to deactivate <strong class="text-danger" id="employeeName"></strong>?
                </h6>
                <div class="alert alert-info border-0 bg-light">
                    <i class="fas fa-shield-alt text-info me-2"></i>
                    <strong>Safe Operation:</strong> This will make the employee inactive but preserve all their data in the system.
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-outline-secondary me-3" data-bs-dismiss="modal">
                    <i class="fas fa-arrow-left me-1"></i> Cancel
                </button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteBtn">
                    <i class="fas fa-user-slash me-1"></i> Yes, Deactivate
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($.fn.DataTable && $('#employeesTable').length) {
                $('#employeesTable').DataTable({
                    "pageLength": 25,
                    "order": [[ 0, "asc" ]],
                    "responsive": true
                });
            }
        });

        let employeeToDelete = null;

        function confirmDelete(employeeId, firstName, lastName) {
            employeeToDelete = employeeId;
            $('#employeeName').text(firstName + ' ' + lastName);
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        $('#confirmDeleteBtn').click(function() {
            if (employeeToDelete) {
                // Create a form and submit it
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteEmployee")';
                
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = employeeToDelete;
                
                var token = document.createElement('input');
                token.type = 'hidden';
                token.name = '__RequestVerificationToken';
                token.value = $('input[name="__RequestVerificationToken"]').val() || '';
                
                form.appendChild(input);
                form.appendChild(token);
                document.body.appendChild(form);
                form.submit();
            }
        });

        // Reset when modal is hidden
        $('#deleteModal').on('hidden.bs.modal', function() {
            employeeToDelete = null;
        });
    </script>
}

<style>
    .border-left-primary {
        border-left: 4px solid #007bff !important;
    }
    
    .border-left-success {
        border-left: 4px solid #28a745 !important;
    }
    
    .border-left-warning {
        border-left: 4px solid #ffc107 !important;
    }
    
    .border-left-info {
        border-left: 4px solid #17a2b8 !important;
    }
</style>

