<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OKR Performance Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OKR Performance Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (ViewBag.UserRole == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Manager" asp-action="Index">Manager Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Manager" asp-action="MyPerformanceHistory">My Performance Reviews</a>
                                </li>
                            }
                            else if (ViewBag.UserRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="MyPerformanceHistory">My Performance Reviews</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Employee" asp-action="MyPerformanceHistory">My Performance Reviews</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <!-- Notifications Dropdown -->
                            <li class="nav-item dropdown me-3">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-light position-relative" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="notification-avatar">
                                        <i class="fas fa-bell fa-2x text-light"></i>
                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notificationBadge" style="display: none;">
                                            0
                                        </span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationDropdown" style="min-width: 350px; max-height: 400px; overflow-y: auto;">
                                    <li class="dropdown-header d-flex justify-content-between align-items-center">
                                        <span><i class="fas fa-bell me-2"></i>Notifications</span>
                                        <button class="btn btn-sm btn-outline-secondary" id="markAllReadBtn" style="display: none;">
                                            <i class="fas fa-check-double"></i> Mark All Read
                                        </button>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li id="notificationList">
                                        <div class="text-center py-3">
                                            <i class="fas fa-spinner fa-spin"></i> Loading...
                                        </div>
                                    </li>
                                </ul>
                            </li>
                            
                            <!-- User Profile Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-light" href="#" id="userProfileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        <i class="fas fa-user-circle fa-2x text-light"></i>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                                    <li class="dropdown-header">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-circle fa-3x text-primary me-3"></i>
                                            <div>
                                                <h6 class="mb-0">@User.Identity.Name</h6>
                                                <small class="text-muted">@(ViewBag.UserRole ?? "Employee")</small>
                                                <div class="mt-1">
                                                    <span class="badge bg-success">Online</span>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <!-- Profile Section -->
                                    <li class="dropdown-header">
                                        <i class="fas fa-user me-2"></i>Profile
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ViewProfile", "Profile")">
                                            <i class="fas fa-id-card me-2"></i>View Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("EditProfile", "Profile")">
                                            <i class="fas fa-edit me-2"></i>Edit Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ChangePassword", "Profile")">
                                            <i class="fas fa-key me-2"></i>Change Password
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("PerformanceHistory", "Profile")">
                                            <i class="fas fa-calendar-alt me-2"></i>Performance History
                                        </a>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <!-- Settings Section -->
                                    <li class="dropdown-header">
                                        <i class="fas fa-cog me-2"></i>Settings
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Notifications", "Profile")">
                                            <i class="fas fa-bell me-2"></i>Notifications
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Settings", "Profile")">
                                            <i class="fas fa-palette me-2"></i>Theme & Appearance
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Settings", "Profile")">
                                            <i class="fas fa-language me-2"></i>Language & Region
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("PrivacySecurity", "Profile")">
                                            <i class="fas fa-shield-alt me-2"></i>Privacy & Security
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ExportData", "Profile")">
                                            <i class="fas fa-download me-2"></i>Export Data
                                        </a>
                                    </li>
                                    
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <!-- Help & Support -->
                                    <li class="dropdown-header">
                                        <i class="fas fa-question-circle me-2"></i>Help & Support
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("UserGuide", "Profile")">
                                            <i class="fas fa-book me-2"></i>User Guide
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("ContactSupport", "Profile")">
                                            <i class="fas fa-headset me-2"></i>Contact Support
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("About", "Profile")">
                                            <i class="fas fa-info-circle me-2"></i>About
                                        </a>
                            </li>
                                    
                                    <li><hr class="dropdown-divider"></li>
                                    
                                    <!-- Logout -->
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <!-- Toast Notification Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="successMessage">
                <!-- Success message will be inserted here -->
            </div>
        </div>
        
        <div id="errorToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-danger text-white">
                <i class="fas fa-exclamation-circle me-2"></i>
                <strong class="me-auto">Error</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="errorMessage">
                <!-- Error message will be inserted here -->
            </div>
        </div>
        
        <div id="warningToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-warning text-dark">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong class="me-auto">Warning</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="warningMessage">
                <!-- Warning message will be inserted here -->
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OKR Performance Management - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Theme functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved theme
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            
            // Update theme selector if it exists
            const themeSelect = document.querySelector('select[name="Theme"]');
            if (themeSelect) {
                themeSelect.value = savedTheme;
                
                // Add change event listener
                themeSelect.addEventListener('change', function() {
                    const newTheme = this.value;
                    document.documentElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('theme', newTheme);
                });
            }
        });
    </script>
    
    <script>
        $(document).ready(function() {
            // Function to show toast notifications
            function showToast(type, message) {
                let toastElement;
                let messageElement;
                
                switch(type) {
                    case 'success':
                        toastElement = document.getElementById('successToast');
                        messageElement = document.getElementById('successMessage');
                        break;
                    case 'error':
                        toastElement = document.getElementById('errorToast');
                        messageElement = document.getElementById('errorMessage');
                        break;
                    case 'warning':
                        toastElement = document.getElementById('warningToast');
                        messageElement = document.getElementById('warningMessage');
                        break;
                }
                
                if (toastElement && messageElement) {
                    messageElement.textContent = message;
                    const toast = new bootstrap.Toast(toastElement, {
                        autohide: true,
                        delay: type === 'error' ? 8000 : 4000 // Error messages stay longer
                    });
                    toast.show();
                }
            }
            
            // Check for TempData messages and show toasts
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                showToast('success', '@Html.Raw(TempData["SuccessMessage"])');
                </text>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                showToast('error', '@Html.Raw(TempData["ErrorMessage"])');
                </text>
            }
            
            @if (TempData["WarningMessage"] != null)
            {
                <text>
                showToast('warning', '@Html.Raw(TempData["WarningMessage"])');
                </text>
            }

            // Notification System
            let notificationCheckInterval;
            
            // Only initialize notification system if user is authenticated and elements exist
            if (document.getElementById('notificationBadge') && document.getElementById('notificationList')) {
                // Load notifications on page load
                loadNotifications();
                
                // Check for new notifications every 30 seconds
                notificationCheckInterval = setInterval(loadNotifications, 30000);
                
                // Mark all as read button
                const markAllBtn = document.getElementById('markAllReadBtn');
                if (markAllBtn) {
                    markAllBtn.addEventListener('click', function() {
                        markAllAsRead();
                    });
                }
            }
            
            function loadNotifications() {
                // Only make request if user is authenticated
                if (!document.getElementById('notificationBadge')) return;
                
                fetch('/Notification/GetNotifications')
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Notifications loaded:', data); // Debug log
                        updateNotificationBadge(data.unreadCount);
                        updateNotificationList(data.notifications);
                    })
                    .catch(error => {
                        console.error('Error loading notifications:', error);
                        // Silently fail - don't show error to user
                    });
            }
            
            function updateNotificationBadge(count) {
                const badge = document.getElementById('notificationBadge');
                const markAllBtn = document.getElementById('markAllReadBtn');
                
                console.log('Updating notification badge with count:', count); // Debug log
                
                if (!badge || !markAllBtn) {
                    console.log('Badge or markAllBtn not found'); // Debug log
                    return; // Exit if elements don't exist
                }
                
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'inline-block';
                    markAllBtn.style.display = 'inline-block';
                    console.log('Badge displayed with count:', count); // Debug log
                } else {
                    badge.style.display = 'none';
                    markAllBtn.style.display = 'none';
                    console.log('Badge hidden'); // Debug log
                }
            }
            
            function updateNotificationList(notifications) {
                const list = document.getElementById('notificationList');
                
                if (!list) return; // Exit if element doesn't exist
                
                if (notifications.length === 0) {
                    list.innerHTML = '<div class="text-center py-3 text-muted"><i class="fas fa-bell-slash me-2"></i>No notifications</div>';
                    return;
                }
                
                let html = '';
                notifications.forEach(notification => {
                    const isReadClass = notification.isRead ? '' : 'bg-light';
                    const iconClass = getNotificationIcon(notification.type);
                    
                    html += `
                        <li class="notification-item ${isReadClass}" data-id="${notification.id}">
                            <div class="d-flex align-items-start p-2">
                                <div class="me-3">
                                    <i class="${iconClass} text-primary"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-bold">${notification.title}</div>
                                    <div class="small text-muted">${notification.message}</div>
                                    <div class="small text-muted">${notification.createdDate}</div>
                                    ${notification.senderName ? `<div class="small text-muted">From: ${notification.senderName}</div>` : ''}
                                </div>
                                ${!notification.isRead ? '<button class="btn btn-sm btn-outline-primary mark-read-btn" data-id="' + notification.id + '"><i class="fas fa-check"></i></button>' : ''}
                            </div>
                        </li>
                    `;
                });
                
                list.innerHTML = html;
                
                // Add click handlers for mark as read buttons
                document.querySelectorAll('.mark-read-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        markAsRead(id);
                    });
                });
                
                // Add click handlers for notification items
                document.querySelectorAll('.notification-item').forEach(item => {
                    item.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        markAsRead(id);
                    });
                });
            }
            
            function getNotificationIcon(type) {
                switch(type) {
                    case 'OKR_Submitted': return 'fas fa-clipboard-check';
                    case 'OKR_Assigned': return 'fas fa-tasks';
                    case 'Review_Assigned': return 'fas fa-star';
                    case 'Review_Completed': return 'fas fa-check-circle';
                    case 'Review_Creation_Failed': return 'fas fa-exclamation-triangle';
                    case 'Review_Creation_Partial': return 'fas fa-exclamation-circle';
                    default: return 'fas fa-bell';
                }
            }
            
            function markAsRead(id) {
                fetch('/Notification/MarkAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: parseInt(id) })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        loadNotifications(); // Reload to update UI
                    }
                })
                .catch(error => {
                    console.error('Error marking notification as read:', error);
                    // Silently fail - don't show error to user
                });
            }
            
            function markAllAsRead() {
                fetch('/Notification/MarkAllAsRead', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        loadNotifications(); // Reload to update UI
                    }
                })
                .catch(error => {
                    console.error('Error marking all notifications as read:', error);
                    // Silently fail - don't show error to user
                });
            }
            
            // Clean up interval when page unloads
            window.addEventListener('beforeunload', function() {
                if (notificationCheckInterval) {
                    clearInterval(notificationCheckInterval);
                }
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
