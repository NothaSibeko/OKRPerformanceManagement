@{
    var userRole = ViewBag.UserRole as string ?? "Employee";
    string dashboardAction = "Index";
    string dashboardController = "Home";
    string dashboardText = "Back to Home";
    
    if (userRole == "Admin")
    {
        dashboardController = "Admin";
        dashboardText = "Back to Admin Dashboard";
    }
    else if (userRole == "Manager")
    {
        dashboardController = "Manager";
        dashboardText = "Back to Manager Dashboard";
    }
}

<a href="@Url.Action(dashboardAction, dashboardController)" class="btn btn-info me-2">
    <i class="fas fa-tachometer-alt"></i> @dashboardText
</a>

