@{
    ViewData["Title"] = "Employee OKR Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var employee = ViewBag.Employee as OKRPerformanceManagement.Models.Employee;
    var reviews = ViewBag.Reviews as List<OKRPerformanceManagement.Models.PerformanceReview>;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0 text-gray-800">OKR Details for @employee.FirstName @employee.LastName</h1>
                <a href="@Url.Action("DebugEmployeeOKRs", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to OKR Summary
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Employee Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> @employee.FirstName @employee.LastName</p>
                            <p><strong>Email:</strong> @employee.Email</p>
                            <p><strong>Role:</strong> <span class="badge badge-info">@employee.Role</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Position:</strong> @employee.Position</p>
                            <p><strong>Manager ID:</strong> @(employee.ManagerId?.ToString() ?? "None")</p>
                            <p><strong>Active:</strong> 
                                @if (employee.IsActive)
                                {
                                    <span class="badge badge-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">No</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Performance Reviews (@reviews.Count)</h6>
                    @if (reviews.Any())
                    {
                        <form method="post" action="@Url.Action("CleanupEmployeeOKRs")" onsubmit="return confirm('Are you sure you want to delete ALL OKR data for @employee.FirstName @employee.LastName? This action cannot be undone!');">
                            <input type="hidden" name="employeeId" value="@employee.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Cleanup All OKR Data
                            </button>
                        </form>
                    }
                </div>
                <div class="card-body">
                    @if (reviews.Any())
                    {
                        @foreach (var review in reviews)
                        {
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0">Review ID: @review.Id</h6>
                                    <small class="text-muted">
                                        Period: @review.ReviewPeriodStart.ToString("MMM dd, yyyy") - @review.ReviewPeriodEnd.ToString("MMM dd, yyyy") |
                                        Status: <span class="badge badge-info">@review.Status</span> |
                                        Created: @review.CreatedDate.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Manager ID:</strong> @review.ManagerId</p>
                                            <p><strong>OKR Template ID:</strong> @review.OKRTemplateId</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Objectives:</strong> @review.Objectives.Count</p>
                                            <p><strong>Total Key Results:</strong> @review.Objectives.Sum(o => o.KeyResults.Count)</p>
                                        </div>
                                    </div>
                                    
                                    @if (review.Objectives.Any())
                                    {
                                        <h6>Objectives and Key Results:</h6>
                                        @foreach (var objective in review.Objectives)
                                        {
                                            <div class="ml-3 mb-2">
                                                <strong>@objective.Name</strong> (Weight: @objective.Weight%)
                                                <ul class="mb-0">
                                                    @foreach (var keyResult in objective.KeyResults)
                                                    {
                                                        <li>@keyResult.Name</li>
                                                    }
                                                </ul>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> This employee has no OKR data. This is correct for new employees who haven't been assigned OKRs by their manager yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
