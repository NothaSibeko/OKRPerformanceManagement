@using OKRPerformanceManagement.Models
@{
   // ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Toast Notification Container -->
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div id="successToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="toastMessage">
                <!-- Message will be inserted here -->
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-end align-items-center mb-4">
                <div>
                    <form method="post" action="@Url.Action("ReSeedOKRTemplates")" style="display: inline;">
                        <button type="submit" class="btn btn-warning" onclick="return confirm('This will update all OKR templates with the latest structure. Continue?')">
                            <i class="fas fa-sync-alt"></i> Update OKR Templates
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Employees
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Employees.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Active Roles
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Roles.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tag fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                OKR Templates
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.OKRTemplates.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Managers
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @((ViewBag.Employees as List<OKRPerformanceManagement.Models.Employee>).Count(e => e.Role == "Manager"))
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Employee Management</h6>
                    <a href="@Url.Action("CreateEmployee")" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Create Employee
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="employeesTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Position</th>
                                    <th>Manager</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in ViewBag.Employees)
                                {
                                    <tr>
                                        <td>@employee.FirstName @employee.LastName</td>
                                        <td>@employee.Email</td>
                                        <td>
                                            <span class="badge badge-info">@employee.Role</span>
                                        </td>
                                        <td>@employee.Position</td>
                                        <td>@(employee.Manager?.FirstName + " " + employee.Manager?.LastName ?? "N/A")</td>
                                        <td>
                                            @if (employee.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditEmployee", new { id = employee.Id })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@employee.Id, '@employee.FirstName', '@employee.LastName')">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Role Management Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Role Management</h6>
                    <a href="@Url.Action("CreateRole")" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Create Role
                    </a>
                </div>
                <div class="card-body">
                    @{
                        var roles = ViewBag.Roles as List<EmployeeRole>;
                    }
                    @if (roles != null && roles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Role Name</th>
                                        <th>Description</th>
                                        <th>Status</th>
                                        <th>Created Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var role in roles)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@role.Name</strong>
                                            </td>
                                            <td>@role.Description</td>
                                            <td>
                                                @if (role.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>@role.CreatedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("EditRole", new { id = role.Id })" class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger delete-role-btn" 
                                                        data-role-id="@role.Id" 
                                                        data-role-name="@role.Name">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-tag fa-3x text-gray-300 mb-3"></i>
                            <h5 class="text-gray-500">No Roles Found</h5>
                            <p class="text-gray-400">Create your first role to get started.</p>
                            <a href="@Url.Action("CreateRole")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create First Role
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- OKR Templates Section -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">OKR Templates</h6>
                    <a href="@Url.Action("ManageOKRTemplates")" class="btn btn-sm btn-primary">
                        <i class="fas fa-cog"></i> Manage Templates
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Template Name</th>
                                    <th>Role</th>
                                    <th>Description</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var template in ViewBag.OKRTemplates)
                                {
                                    <tr>
                                        <td>@template.Name</td>
                                        <td>
                                            <span class="badge badge-secondary">@template.Role</span>
                                        </td>
                                        <td>@template.Description</td>
                                        <td>
                                            @if (template.IsActive)
                                            {
                                                <span class="badge badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>@template.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title d-flex align-items-center" id="deleteModalLabel">
                    <i class="fas fa-user-slash me-2"></i> Confirm Employee Deactivation
                </h5>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-times fa-2x text-danger"></i>
                    </div>
                </div>
                <h6 class="mb-3 text-dark">
                    Are you sure you want to deactivate <strong class="text-danger" id="employeeName"></strong>?
                </h6>
                <div class="alert alert-info border-0 bg-light">
                    <i class="fas fa-shield-alt text-info me-2"></i>
                    <strong>Safe Operation:</strong> This will make the employee inactive but preserve all their data in the system.
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-outline-secondary me-3" data-bs-dismiss="modal">
                    <i class="fas fa-arrow-left me-1"></i> Cancel
                </button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteBtn">
                    <i class="fas fa-user-slash me-1"></i> Yes, Deactivate
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Role Delete Confirmation Modal -->
<div class="modal fade" id="deleteRoleModal" tabindex="-1" role="dialog" aria-labelledby="deleteRoleModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title d-flex align-items-center" id="deleteRoleModalLabel">
                    <i class="fas fa-user-tag me-2"></i> Confirm Role Deletion
                </h5>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-danger bg-opacity-10 rounded-circle" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-tag fa-2x text-danger"></i>
                    </div>
                </div>
                <h6 class="mb-3 text-dark">
                    Are you sure you want to delete the role <strong class="text-danger" id="roleName"></strong>?
                </h6>
                <div class="alert alert-warning border-0 bg-light">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <strong>Warning:</strong> This action cannot be undone. Make sure no employees are assigned to this role.
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4">
                <button type="button" class="btn btn-outline-secondary me-3" data-bs-dismiss="modal">
                    <i class="fas fa-arrow-left me-1"></i> Cancel
                </button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteRoleBtn">
                    <i class="fas fa-trash me-1"></i> Yes, Delete
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTable functionality removed to prevent JavaScript errors
            // The table will still be functional without DataTable features
            console.log('Admin dashboard loaded successfully');
            
            // Show success toast notification if there's a success message
            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                var successMessage = '@Html.Raw(TempData["SuccessMessage"])';
                showSuccessToast(successMessage);
                </text>
            }
        });

        function showSuccessToast(message) {
            $('#toastMessage').text(message);
            var toastElement = document.getElementById('successToast');
            var toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 4000 // Show for 4 seconds
            });
            toast.show();
        }

        let employeeToDelete = null;

        function confirmDelete(employeeId, firstName, lastName) {
            employeeToDelete = employeeId;
            $('#employeeName').text(firstName + ' ' + lastName);
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        $('#confirmDeleteBtn').click(function() {
            if (employeeToDelete) {
                // Create a form and submit it
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteEmployee")';
                
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = employeeToDelete;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        });

        // Reset when modal is hidden
        $('#deleteModal').on('hidden.bs.modal', function() {
            employeeToDelete = null;
        });

        // Role deletion functionality
        let roleToDelete = null;

        // Use event delegation for role delete buttons
        $(document).on('click', '.delete-role-btn', function() {
            var roleId = $(this).data('role-id');
            var roleName = $(this).data('role-name');
            roleToDelete = roleId;
            $('#roleName').text(roleName);
            var modal = new bootstrap.Modal(document.getElementById('deleteRoleModal'));
            modal.show();
        });

        $('#confirmDeleteRoleBtn').click(function() {
            if (roleToDelete) {
                // Create a form and submit it
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("DeleteRole")';
                
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'id';
                input.value = roleToDelete;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        });

        // Reset when role modal is hidden
        $('#deleteRoleModal').on('hidden.bs.modal', function() {
            roleToDelete = null;
        });
    </script>
}
