@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h3 class="text-center mb-0">
                    <i class="fas fa-ban me-2"></i>Access Denied
                </h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-5x text-danger"></i>
                </div>
                <h4 class="mb-3">You don't have permission to access this resource</h4>
                <p class="text-muted mb-4">
                    You are trying to access a page or resource that requires specific permissions or roles that you don't currently have.
                </p>
                
                @if (!string.IsNullOrEmpty(ViewData["ReturnUrl"] as string))
                {
                    <p class="text-muted">
                        <strong>Requested URL:</strong> <code>@ViewData["ReturnUrl"]</code>
                    </p>
                }
                
                <div class="mt-4">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary me-2">
                        <i class="fas fa-home me-2"></i>Go to Home
                    </a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    }
                </div>
                
                <div class="mt-4">
                    <p class="text-muted small">
                        If you believe you should have access to this resource, please contact your administrator.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

